<Window x:Class="EntityFramework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EntityFramework"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="18"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Grid.ColumnSpan="2">
            <MenuItem Header="Меню">
                <MenuItem x:Name="SubjectsJournal" Header="Журнал контрагентов" Click="SubjectsJournal_Click"/>
                <MenuItem x:Name="UsersJournal" Header="Журнал пользователей" IsEnabled="False"/>
                <Separator/>
                <MenuItem Header="Справочники" />
                <Separator/>
                <MenuItem Header="Выход"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
